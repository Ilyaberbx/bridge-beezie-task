{
  "compilerOptions": {
    "composite": true,
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true
  },
  "references": [
    {
      "path": "../shared/tsconfig.json"
    }
  ],
  "include": [
    "src/**/*",
    "src/configs/usdcAddressesConfig.ts",
    "src/abstractions/iusdcAddressService.ts",
    "src/services/usdcAddressService.ts",
    "src/validation/usdcAddressesConfig.ts",
    "src/validation/addressRegex.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
